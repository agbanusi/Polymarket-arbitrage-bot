# Polymarket Arbitrage Bot - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# API CREDENTIALS (Required for live trading)
# ===========================================
# Get these from: https://polymarket.com → Settings → API Keys
POLYMARKET_API_KEY=
POLYMARKET_SECRET=
POLYMARKET_PASSPHRASE=

# Your Ethereum wallet private key (for signing orders)
# WARNING: Never share this! Add .env to .gitignore
PRIVATE_KEY=

# ===========================================
# BOT MODE
# ===========================================
# "dry-run" = No real trades, just logging
# "live" = Real trading with real money
BOT_MODE=dry-run

# ===========================================
# API ENDPOINTS (usually don't change these)
# ===========================================
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com
RTDS_WS_URL=wss://rtds.polymarket.com

# ===========================================
# RISK MANAGEMENT
# ===========================================
# Maximum USD per single position
MAX_POSITION_SIZE=50

# Maximum total USD exposure across all positions
MAX_TOTAL_EXPOSURE=500

# Stop loss percentage (0.15 = 15% loss triggers exit)
STOP_LOSS_PERCENT=0.15

# Take profit percentage (0.30 = 30% profit triggers exit)
TAKE_PROFIT_PERCENT=0.30

# Trailing stop (0 = disabled, 0.10 = 10% trailing)
TRAILING_STOP_PERCENT=0

# Trading fees (round-trip) - Used to calculate true profit
TRADING_FEE_PERCENT=0.02

# Minimum profit percentage after fees to enter a trade (0.03 = 3%)
MIN_PROFIT_AFTER_FEES=0.03

# Minimum order book liquidity in USD before entering
MIN_LIQUIDITY_USD=50

# ===========================================
# SPORTS STRATEGY
# ===========================================
SPORTS_ENABLED=true

# Buy when price is below this (0.325 = 32.5 cents)
SPORTS_ENTRY_THRESHOLD=0.325

# Sell target price (0.5 = 50 cents)
SPORTS_EXIT_TARGET=0.5

# Delta neutral mode - BUY BOTH SIDES (default: true for loss protection)
# true = Buy favorite + underdog (hedge against upsets)
# false = Buy favorite only (higher risk, higher reward)
SPORTS_DELTA_NEUTRAL=true

# Tags to search for (comma-separated)
SPORTS_TAGS=NBA,NFL,MLB,NHL,Soccer

# Live game trading (track odds shifts during games)
SPORTS_LIVE_GAME_ONLY=false
SPORTS_ODDS_SHIFT_MIN=0.10
SPORTS_ODDS_HISTORY_SIZE=10

# Late-game favorite entry (game must be 40+ mins in for NBA - 48 min games)
SPORTS_LATE_GAME_MIN_ODDS=0.85

# ===========================================
# CRYPTO SHORT-TERM STRATEGY
# ===========================================
CRYPTO_ENABLED=true

# Time windows to trade (comma-separated: 15min, 1hr, 4hr)
CRYPTO_TIME_WINDOWS=15min,1hr,4hr

# Buy when Yes or No is below this price
CRYPTO_CHEAP_THRESHOLD=0.40

# Maximum Yes+No combined price for spread arb
CRYPTO_MAX_SPREAD=0.99

# Minimum seconds before expiry to enter
CRYPTO_MIN_TIME_LEFT=120

# Crypto symbols to track (BTC, ETH, SOL only)
CRYPTO_SYMBOLS=BTC,ETH,SOL

# ===========================================
# MONITORING
# ===========================================
# How often to check prices (seconds)
PRICE_UPDATE_INTERVAL=5

# Log level (debug, info, warn, error)
LOG_LEVEL=info
